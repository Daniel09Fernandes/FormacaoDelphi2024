    begin
      FImagemEsquerda.Picture.LoadFromFile('C:\Users\Gustavo Mena Barreto\OneDrive\햞ea de Trabalho\Componentes\Imagens\metallica.jpeg');
    end;
  end;

  FImagemDireita := TImage.Create(Self);
  FImagemDireita.Parent := Self;
  FImagemDireita.Stretch := FStretch;
  FImagemDireita.Proportional := FProportional;
  FImagemDireita.Cursor := crHandPoint;
  FImagemDireita.OnMouseDown := DoImageClick;

  if csDesigning in Self.ComponentState then
  begin
    if TFile.Exists('C:\Users\Gustavo Mena Barreto\OneDrive\햞ea de Trabalho\Componentes\Imagens\beatles.jpg') then
